server {
        listen 80 default_server;
        listen 443 default_server ssl;

        error_page 403 /403.html;
        location = /403.html {
                root /usr/share/nginx/html;
                internal;
        }

		error_page 502 /502.html;
        location = /502.html {
                root /usr/share/nginx/html;
                internal;
        }

        error_page 503 /503.html;
        location = /503.html {
                root /usr/share/nginx/html;
                internal;
        }

}